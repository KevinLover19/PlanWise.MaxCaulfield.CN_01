<?php
// PlanWise - 用户控制台
require_once __DIR__ . '/db_connect.php';

// 检查用户是否已登录
require_login();

// 设置页面特定的变量
$page_title = "我的控制台";
$page_description = "PlanWise用户控制台 - 管理您的商业策略分析报告，查看生成历史和账户信息";
$canonical_url = "https://planwise.maxcaulfield.cn/dashboard.php";

// 设置面包屑导航
$breadcrumbs = [
    '我的控制台'
];

// 获取用户信息
$user_id = $_SESSION['user_id'];
try {
    $stmt = $pdo->prepare("SELECT custom_ID, username, email, created_at FROM users WHERE id = ?");
    $stmt->execute([$user_id]);
    $user = $stmt->fetch(PDO::FETCH_ASSOC);
    
    if (!$user) {
        session_destroy();
        header('Location: /login.php');
        exit();
    }
    
    // 获取用户的报告统计
    $stmt = $pdo->prepare("SELECT COUNT(*) as total_reports FROM reports WHERE user_id = ?");
    $stmt->execute([$user_id]);
    $report_stats = $stmt->fetch(PDO::FETCH_ASSOC);
    
    // 获取最近的报告
    $stmt = $pdo->prepare("SELECT id, title, status, created_at FROM reports WHERE user_id = ? ORDER BY created_at DESC LIMIT 5");
    $stmt->execute([$user_id]);
    $recent_reports = $stmt->fetchAll(PDO::FETCH_ASSOC);
    
} catch (PDOException $e) {
    error_log("Dashboard error: " . $e->getMessage());
    $user = null;
    $report_stats = ['total_reports' => 0];
    $recent_reports = [];
}

// 包含头部
include __DIR__ . '/includes/header.php';
?>

<!-- 欢迎区域 -->
<section class="py-12" style="background: linear-gradient(135deg, var(--sky-dark) 0%, var(--sky-mid) 100%);">
